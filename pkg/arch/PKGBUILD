# Maintainer: Sebastian Lau <lauseb644 _at_ gmail _dot_ com>
pkgname="liblogcpp-local"
pkgver=1.9.0.r0.g188de4f
pkgrel=1
pkgdesc="A intuitive and highly customizable LGPL library for logging with C++. (with support for QString and static)"
arch=('x86_64' 'i686' 'armv6h' 'armv7h')
url="https://github.com/nullptrT/liblogcpp"
license=('LGPL3')
conflicts=('liblogcpp' 'liblogcpp-qt')
provides=('liblogcpp=$pkgver')
depends=()
makedepends=('cmake' 'qt5-base')

pkgver() {
	cd "$srcdir/liblogcpp"
	git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	cd "$srcdir"
	[[ -e liblogcpp ]] && rm -rf liblogcpp
	[[ -e build ]] && rm -r build
	mkdir liblogcpp
	mkdir build
	cp -rv ../../../{Doxyfile.in,CMakeLists.txt,lib,src,.git} liblogcpp
}

build() {
	cd "$srcdir/build"

	cmake -DCMAKE_INSTALL_PREFIX:PATH="/usr" \
		-DLOGCPP_INSTALL_LIBS=ON \
		-DLOGCPP_ENABLE_QT_SUPPORT=ON \
		-DBUILD_LOGCPP_TEST=ON \
		-DLOGCPP_AUTOCOLOR=ON \
		"../liblogcpp"

	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="${pkgdir}" install
}
